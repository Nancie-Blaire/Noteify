<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f4e8df"/>
        </shape>
    </item>

    <!-- Peach/Orange Circle (Left/Top) -->
    <item
        android:width="270dp"
        android:height="250dp"
        android:top="300dp"
        android:left="-50dp">
        <shape android:shape="oval">
            <stroke
                android:width="10dp"
                android:color="#f6d5b6"/>

        </shape>
    </item>

    <!-- Sage Green Circle (Right/Bottom) -->
    <item
        android:width="340dp"
        android:height="320dp"
        android:top="390dp"
        android:bottom="-100dp"
        android:left="100dp"
        android:right="-20dp">
        <shape android:shape="oval">
            <stroke
                android:width="10dp"
                android:color="#8daaa6"/>

        </shape>
    </item>

</layer-list>