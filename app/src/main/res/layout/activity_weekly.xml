<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back"
            app:tint="#000000"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Calendar Icon -->
        <ImageView
            android:id="@+id/scheduleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar"
            android:contentDescription="Set Schedule"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/saveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check"
            android:contentDescription="Save"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- NestedScrollView for Content (CHANGED FROM ScrollView) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_fab_weeklyplanner"
                android:contentDescription="Todo icon"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                app:tint="#000000" />

            <!-- Title -->
            <EditText
                android:id="@+id/weeklyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weekly Plan"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:inputType="textCapWords"
                android:maxLines="2"
                android:layout_marginBottom="16dp" />

            <!-- Days Container -->
            <LinearLayout
                android:id="@+id/daysContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Monday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mon"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/addMonTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Tuesday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tues"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/addTuesTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tuesTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Wednesday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Wed"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/addWedTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/wedTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Thursday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thur"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/addThurTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/thurTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Friday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fri"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/addFriTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/friTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Saturday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sat"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/addSatTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/satTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Sunday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sun"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <ImageView
                            android:id="@+id/addSunTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sunTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>