<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noteLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="#FAFAFA"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/checkBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_check"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Note Title -->
    <EditText
        android:id="@+id/noteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:hint="Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:inputType="textCapSentences"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:textColor="#000"
        android:maxLines="2" />

    <!-- Blocks RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/blocksRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/noteTitle"
        android:layout_above="@id/keyboardToolbar"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false" />

    <!-- Keyboard Toolbar (Always Visible at Bottom) -->
    <HorizontalScrollView
        android:id="@+id/keyboardToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#8daaa6"
        android:elevation="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            android:gravity="center_vertical">

            <!-- Headings & Fonts -->
            <ImageButton
                android:id="@+id/headingsandfont"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/headings_fonts"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Text Style"
                app:tint="#FFFFFFFF" />

            <!-- Divider -->
            <ImageButton
                android:id="@+id/addDividerOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_notes_feature_divider"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Divider"
                app:tint="#FFFFFFFF" />

            <!-- Bullet List -->
            <ImageButton
                android:id="@+id/addBulletListOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/bullet_points"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bullet List"
                app:tint="#FFFFFFFF" />

            <!-- Numbered List -->
            <ImageButton
                android:id="@+id/addNumberedListOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/numbered_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Numbered List"
                app:tint="#FFFFFFFF" />

            <!-- Checkbox -->
            <ImageButton
                android:id="@+id/addCheckboxOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/checkbox"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Checkbox"
                app:tint="#FFFFFFFF" />

            <!-- Link -->
            <ImageButton
                android:id="@+id/addLinkOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/link"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Link"
                app:tint="#FFFFFFFF" />

            <!-- Image -->
            <ImageButton
                android:id="@+id/insertImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_insert_image"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Image"
                app:tint="#FFFFFFFF" />

            <!-- Indent -->
            <ImageButton
                android:id="@+id/indentOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/indent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Indent"
                app:tint="#FFFFFF" />

            <!-- Outdent -->
            <ImageButton
                android:id="@+id/outdentOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/outdent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Outdent"
                app:tint="#FFFFFFFF" />

            <!-- Theme -->
            <ImageButton
                android:id="@+id/addThemeOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_notes_feature_palette"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Theme"
                app:tint="#FFFFFFFF" />

            <!-- Subpage -->
            <ImageButton
                android:id="@+id/addSubpageOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_fab_notes"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Subpage"
                app:tint="#FFFFFFFF" />

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>