<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/calendar_popup_window">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title with Day Name -->
        <TextView
            android:id="@+id/dayNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday Schedule"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp" />

        <!-- Container for multiple time schedules -->
        <LinearLayout
            android:id="@+id/timeSchedulesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <!-- Time schedule items will be added here dynamically -->
        </LinearLayout>

        <!-- Add Time Schedule Button -->
        <Button
            android:id="@+id/addTimeScheduleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ ADD TIME SCHEDULE"
            android:textColor="#000000"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Clear All Schedules Button -->
        <Button
            android:id="@+id/clearScheduleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR ALL SCHEDULES"
            android:textColor="#FF5252"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textColor="#808080"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <Button
                android:id="@+id/saveScheduleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textColor="#FFFFFF"
                android:backgroundTint="#ff9376"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>