<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notesMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_bgcolor"
    tools:context=".Notes">

    <!-- Main Content (can be dimmed) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Bar with Search -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <!-- Search Bar -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#000000"
                    app:strokeWidth="1.5dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Search Icon (centered) -->
                        <ImageView
                            android:id="@+id/searchIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_search"
                            app:tint="#757575"
                            android:contentDescription="Search"/>

                        <!-- Search EditText (transparent initially) -->
                        <EditText
                            android:id="@+id/searchBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textColorHint="#CCCCCC"/>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Time and Date Card -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/card_background">
                <!-- Time and Date Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="6dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Time -->
                        <TextView
                            android:id="@+id/timeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.02"
                            android:layout_marginTop="-10dp"
                            android:text=" "
                            android:fontFamily="@font/syne"
                            android:textColor="#000000"
                            android:textSize="48sp" />

                        <!-- AM/PM -->
                        <TextView
                            android:id="@+id/amPmText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="-25dp"
                            android:letterSpacing="0.1"
                            android:text=" "
                            android:fontFamily="@font/syne"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <!-- Date -->
                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/syne"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="#000000"
                        android:letterSpacing="0.08"
                        android:layout_marginBottom="2dp"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Prio Notes Section -->
                <TextView
                    android:id="@+id/prioNotesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prios"
                    android:fontFamily="@font/syne"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <!--      Toolbar for recent notes          -->
                <ImageButton
                    android:id="@+id/prioToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet_points"
                    app:tint="@color/black"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <!-- Grid RecyclerView for Prio Notes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prioNotesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Recent Notes Section -->
                <TextView
                    android:id="@+id/recentNotesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recently Open"
                    android:fontFamily="@font/syne"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <!--      Toolbar for recent notes          -->
                <ImageButton
                    android:id="@+id/recentsToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bullet_points"
                    app:tint="@color/black"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- List RecyclerView for Recent Notes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Blur Overlay (hidden by default) -->
    <View
        android:id="@+id/blurOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone"
        android:clickable="true"
        android:elevation="10dp"/>

    <!-- Search Results Container (hidden by default) -->
    <FrameLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="72dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="40dp"
        android:elevation="11dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#f4e8df"
            app:strokeColor="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Results"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_margin="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>