<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Color Label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notes_feature_palette"
            android:tint="#000000"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

    <!-- Horizontal ScrollView for Colors -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/colorViolet"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#E1BEE7"
                android:tag="#E1BEE7"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/colorYellow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#FFF9C4"
                android:tag="#FFF9C4"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/colorPink"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#F8BBD0"
                android:tag="#F8BBD0"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/colorGreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#C8E6C9"
                android:tag="#C8E6C9"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/colorBlue"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#BBDEFB"
                android:tag="#BBDEFB"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/colorOrange"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#FFE0B2"
                android:tag="#FFE0B2"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/colorRed"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#FFCDD2"
                android:tag="#FFCDD2"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:id="@+id/colorCyan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#B2EBF2"
                android:tag="#B2EBF2"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Style Label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_format"
            android:tint="#000000"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Style"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

    <!-- Style Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/styleHighlight"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Highlight"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="@drawable/style_unselected"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/styleUnderline"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Underline"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="@drawable/style_unselected"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Notes Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add your notes here..."
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bookmarkNoteInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:inputType="textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="16sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/updateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>