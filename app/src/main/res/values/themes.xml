<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.TESTtaskSync" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

    <!-- For note taking activity -->
    <style name="Theme.MyApp.Note" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="editTextStyle">@style/MyEditText</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textColorHint">?attr/colorOnBackground</item>
    </style>

    <!-- Main theme with custom popup menu -->
    <style name="Theme.TESTtaskSync" parent="Base.Theme.TESTtaskSync">
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/CustomMenuTextAppearance</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/CustomMenuTextAppearance</item>
        <item name="android:listPreferredItemPaddingLeft">16dp</item>
        <item name="android:listPreferredItemPaddingRight">16dp</item>
        <item name="android:listPreferredItemPaddingStart">16dp</item>
        <item name="android:listPreferredItemPaddingEnd">16dp</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#f4e8df</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.TESTtaskSync</item>

        <!-- Match status bar to background -->
        <item name="android:statusBarColor">#f4e8df</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#f4e8df</item>
    </style>
</resources>