<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notesMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Notes">

    <!-- Main ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <!-- User Profile Icon -->
                <ImageView
                    android:id="@+id/userProfileIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_account"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="#B0BEC5"
                    android:contentDescription="User Profile"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- Search Bar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <EditText
                        android:id="@+id/searchBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Search"
                        android:background="@android:color/transparent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:imeOptions="actionSearch" />
                </androidx.cardview.widget.CardView>

                <!-- Theme Toggle Icon -->
                <ImageView
                    android:id="@+id/themeToggleIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_light_mode"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="#E3F2FD"
                    android:contentDescription="Toggle Theme" />
            </LinearLayout>

            <!-- Pinned Notes Section -->
            <TextView
                android:id="@+id/pinnedNotesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin notes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="12dp" />

            <!-- Grid RecyclerView for Pinned Notes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pinnedNotesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp" />

            <!-- Recent Notes Section -->
            <TextView
                android:id="@+id/recentNotesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="12dp" />

            <!-- List RecyclerView for Recent Notes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar with Custom Curved Shape -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom">

        <!-- Curved Background -->
        <View
            android:id="@+id/curvedNavBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/curved_navbar"
            android:elevation="4dp" />

    </FrameLayout>

    <!-- Floating Action Button -->
    <!-- Main FAB - Perfect Circle Overlapping the bottom nav -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="70dp"
        android:contentDescription="Add Note"
        android:src="@drawable/add"
        app:backgroundTint="#26E9D8"
        app:tint="#FFFFFF"
        app:fabCustomSize="64dp"
        app:maxImageSize="32dp"
        app:elevation="16dp"
        android:translationZ="16dp" />

    <!-- Sub FAB: Note (closest to main FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="140dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Add Note"
        app:backgroundTint="#2196F3"
        app:fabSize="mini"
        android:visibility="gone"
        android:elevation="10dp" />

    <!-- Sub FAB: to-do list -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="200dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Add Todo"
        app:backgroundTint="#FF9800"
        app:fabSize="mini"
        android:visibility="gone"
        android:elevation="10dp" />

    <!-- Sub FAB: Weekly (farthest from main FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWeekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="260dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Add Weekly"
        app:backgroundTint="#9C27B0"
        app:fabSize="mini"
        android:visibility="gone"
        android:elevation="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="20dp">

        <!-- Home Icon -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Nav Calendar"
                android:elevation="8dp"
                android:padding="12dp"
                android:src="@drawable/ic_home"
                android:translationZ="16dp" />
        </FrameLayout>

        <!-- Calendar Icon -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Calendar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Nav Item 2"
                android:padding="12dp"
                android:src="@drawable/ic_calendar" />
        </FrameLayout>

        <!-- Star Icon -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Star"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Nav Item 3"
                android:padding="12dp"
                android:src="@drawable/ic_star" />
        </FrameLayout>

        <!-- Notification Icon -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Notifs"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Nav Item 4"
                android:padding="12dp"
                android:src="@drawable/ic_notif" />
        </FrameLayout>

        <!-- Settings Icon -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Settings"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_settings" />
        </FrameLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>