<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#f4e8df">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="Back button"
                android:src="@drawable/ic_revert_back_btn"
                app:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Settings"
                android:fontFamily="@font/syne"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSecurityStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:fontFamily="@font/syne"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginBottom="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Master Password"
                android:fontFamily="@font/syne"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPasswordStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="Master password set"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/syne"
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9376"
                android:paddingTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingBottom="10dp"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fingerprint Authentication"
                android:fontFamily="@font/syne"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tvBiometricStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not enabled on this device"
                android:fontFamily="@font/syne"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="25dp"/>

            <Button
                android:id="@+id/btnEnableFingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9376"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Enable Fingerprint"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fingerprint is device-specific. You need to enable it separately on each device."
                android:fontFamily="@font/syne"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="50dp"
                android:padding="12dp"
                android:background="#8daaa6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How it works?"
                android:fontFamily="@font/syne"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Master password works on all devices\n• Fingerprint must be enabled per device\n• If fingerprint fails, you can use password"
                android:fontFamily="@font/syne"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="11sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>