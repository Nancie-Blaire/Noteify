<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#f4e8df">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="Back button"
                android:src="@drawable/ic_revert_back_btn"
                app:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Settings"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSecurityStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginBottom="30dp"/>

        <!-- Card: Password Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F6D5B6"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Master Password"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPasswordStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Master password set"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF9376"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card: Biometric Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F6D5B6"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fingerprint Authentication"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/tvBiometricStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not enabled on this device"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnEnableFingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF9376"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Enable Fingerprint"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fingerprint is device-specific. You need to enable it separately on each device."
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background="#FFF9E6"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:radius="12dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F6D5B6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How it works"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Master password works on all devices\n• Fingerprint must be enabled per device\n• If fingerprint fails, you can use password"
                    android:textSize="11sp"
                    android:textColor="#757575"
                    android:textStyle="bold"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</ScrollView>