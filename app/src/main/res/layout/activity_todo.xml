<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="#8DAAA6"
        android:elevation="2dp"
        android:layout_marginTop="30dp"
        >

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_revert_back_btn"
            android:contentDescription="Back"
            app:tint="#FFFFFF"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Title -->
        <TextView
            android:id="@+id/todoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To-Do List"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@id/backButton"
            android:layout_alignTop="@id/backButton"
            android:layout_alignBottom="@id/backButton"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp" />

        <!-- Secondary Title (editable) -->
        <EditText
            android:id="@+id/todoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:hint="Title of Todo List"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:text="Title of Todo List"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:gravity="end"/>

        <!-- Action Buttons Container -->
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/backButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <!-- Due Date Calendar Button -->

            <!-- Save Button -->
            <ImageView
                android:id="@+id/dueDateButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                app:tint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Set Due Date"
                android:padding="8dp"
                android:src="@drawable/ic_calendar" />

            <ImageView
                android:id="@+id/saveButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Save"
                android:padding="8dp"
                app:tint="#FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_check" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- ScrollView for Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Due Date Display (shown when due date is set) -->
            <LinearLayout
                android:id="@+id/dueDateDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="8dp"
                    app:tint="#2196F3" />

                <TextView
                    android:id="@+id/dueDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Due: Nov 15, 2:30 PM"
                    android:textSize="14sp"
                    android:textColor="#2196F3" />

                <ImageView
                    android:id="@+id/clearDateButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:padding="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#808080" />

            </LinearLayout>

            <!-- Tasks RecyclerView (with drag & drop) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Add Task Button -->
            <LinearLayout
                android:id="@+id/addTaskButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/rounded_bg"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_fab_add"
                    android:contentDescription="Add task"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add task"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- âœ… KEYBOARD TOOLBAR (Notion-style, attached to keyboard) -->
    <HorizontalScrollView
        android:id="@+id/keyboardToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#8daaa6"
        android:elevation="4dp"
        android:visibility="gone"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            android:gravity="center_vertical">

            <!-- Headings & Fonts -->
            <ImageButton
                android:id="@+id/headingsandfont"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/headings_fonts"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Text Style"
                app:tint="#FFFFFFFF" />

            <!-- Divider -->
            <ImageButton
                android:id="@+id/addDividerOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_notes_feature_divider"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Divider"
                app:tint="#FFFFFFFF" />

            <!-- Bullet List -->
            <ImageButton
                android:id="@+id/addBulletListOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/bullet_points"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bullet List"
                app:tint="#FFFFFFFF" />

            <!-- Numbered List -->
            <ImageButton
                android:id="@+id/addNumberedListOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/numbered_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Numbered List"
                app:tint="#FFFFFFFF" />

            <!-- Toggle List -->
            <ImageButton
                android:id="@+id/addToggleListOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/toggle_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle"
                app:tint="#FFFFFFFF" />

            <!-- Checkbox -->
            <ImageButton
                android:id="@+id/addCheckboxOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/checkbox"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Checkbox"
                app:tint="#FFFFFFFF" />

            <!-- Link -->
            <ImageButton
                android:id="@+id/addLinkOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/link"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Link"
                app:tint="#FFFFFFFF" />

            <!-- Image -->
            <ImageButton
                android:id="@+id/insertImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_insert_image"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Image"
                app:tint="#FFFFFFFF" />

            <!-- Table -->
            <ImageButton
                android:id="@+id/addTableOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/table_list"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Table"
                app:tint="#FFFFFF" />

            <!-- Indent -->
            <ImageButton
                android:id="@+id/indentOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/indent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Indent"
                app:tint="#FFFFFF" />

            <!-- Outdent -->
            <ImageButton
                android:id="@+id/outdentOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/outdent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Outdent"
                app:tint="#FFFFFFFF" />

            <!-- Theme -->
            <ImageButton
                android:id="@+id/addThemeOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_notes_feature_palette"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Theme"
                app:tint="#FFFFFFFF" />

            <!-- Subpage -->
            <ImageButton
                android:id="@+id/addSubpageOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_fab_notes"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Subpage"
                app:tint="#FFFFFFFF" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>