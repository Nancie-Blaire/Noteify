<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Main Task Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/todoCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/black" />

        <EditText
            android:id="@+id/taskEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="To-do"
            android:textColor="#808080"
            android:textColorHint="#B0B0B0"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="2"
            android:inputType="textCapSentences|textMultiLine" />

        <!-- Calendar Icon Button -->
        <ImageView
            android:id="@+id/scheduleButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clock"
            android:contentDescription="Set schedule"
            android:padding="4dp"
            android:layout_marginEnd="4dp"
            app:tint="#000000"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/deleteTaskButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Delete task"
            app:tint="#ff2400"
            android:visibility="gone"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Schedule Display (shown when task has schedule) -->
    <LinearLayout
        android:id="@+id/scheduleDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <!-- Calendar android:contentDescription="Schedule" -->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star"

            app:tint="#4CAF50"
            android:layout_marginEnd="8dp" />

        <!-- Schedule Text (e.g., "Nov 12, 2:30 PM") -->
        <TextView
            android:id="@+id/scheduleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nov 12, 2:30 PM"
            android:textSize="12sp"
            android:textColor="#4CAF50" />

        <!-- Notification Icon (shown if notification is enabled) -->
        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_navbar_notif"
            android:contentDescription="Notification"
            app:tint="#FF9800"
            android:visibility="gone"
            android:layout_marginStart="8dp" />

        <!-- Clear Schedule Button (X) -->
        <ImageView
            android:id="@+id/clearScheduleButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Clear schedule"
            android:padding="2dp"
            app:tint="#808080"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>


</LinearLayout>