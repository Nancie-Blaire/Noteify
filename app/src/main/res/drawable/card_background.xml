<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer (offset to bottom-right) -->
    <item
        android:left="9dp"
        android:top="9dp"
      >
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#cccccc" />
        </shape>
    </item>

    <!-- Main Background -->
    <item
        android:right="9dp"
        android:bottom="9dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#f6d5b6" />
        </shape>
    </item>




</layer-list>