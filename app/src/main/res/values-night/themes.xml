<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark -->
    <style name="Base.Theme.TESTtaskSync" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme status bar -->
        <item name="android:statusBarColor">@color/bg_bgcolor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/bg_bgcolor</item>
    </style>

    <!-- FOR MAIN ACTIVITY STATUS BAR -->
    <style name="Theme.MyApp.DarkBars" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/bg_bgcolor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/nav_bg</item>
    </style>

    <!-- Dark splash screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TESTtaskSync</item>

        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>
</resources>