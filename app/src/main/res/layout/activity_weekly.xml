<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="#8daaa6">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_revert_back_btn"
            android:contentDescription="Back"
            app:tint="#000000"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Title -->
        <TextView
            android:id="@+id/weeklyHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Planner"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@id/backButton"
            android:layout_alignTop="@id/backButton"
            android:layout_alignBottom="@id/backButton"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp" />

        <!-- Secondary Title (editable) -->
        <EditText
            android:id="@+id/weeklyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:hint="Title of Weekly Planner"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:text="Title of Weekly Planner"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:gravity="end"/>

        <!-- Action Buttons Container -->
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/backButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <!-- Due Date Calendar Button -->

            <!-- Save Button -->
            <ImageView
                android:id="@+id/scheduleButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Set Due Date"
                android:padding="8dp"
                android:src="@drawable/ic_calendar" />

            <ImageView
                android:id="@+id/saveButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Save"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_check" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- NestedScrollView for Content (CHANGED FROM ScrollView) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

            <!-- Days Container -->
            <LinearLayout
                android:id="@+id/daysContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Monday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="MONDAY"
                            android:letterSpacing=".2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" /><!-- Calendar Icon Button (NEW) -->
                        <ImageView
                            android:id="@+id/mondayScheduleButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Set schedule"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            app:tint="#000000"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                                                <ImageView
                            android:id="@+id/addMonTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fab_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Tuesday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="TUESDAY"
                            android:letterSpacing=".2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" /><!-- Calendar Icon Button (NEW) -->
                        <ImageView
                            android:id="@+id/tuesdayScheduleButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Set schedule"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            app:tint="#000000"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                        <ImageView
                            android:id="@+id/addTuesTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fab_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tuesTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Wednesday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="WEDNESDAY"
                            android:letterSpacing=".2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" /><!-- Calendar Icon Button (NEW) -->
                        <ImageView
                            android:id="@+id/wednesdayScheduleButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Set schedule"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            app:tint="#000000"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                        <ImageView
                            android:id="@+id/addWedTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fab_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/wedTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Thursday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="THURSDAY"
                            android:letterSpacing=".2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" /><!-- Calendar Icon Button (NEW) -->
                        <ImageView
                            android:id="@+id/thursdayScheduleButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Set schedule"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            app:tint="#000000"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                        <ImageView
                            android:id="@+id/addThurTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fab_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/thurTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Friday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="FRIDAY"
                            android:letterSpacing=".2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" /><!-- Calendar Icon Button (NEW) -->
                        <ImageView
                            android:id="@+id/fridayScheduleButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Set schedule"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            app:tint="#000000"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                        <ImageView
                            android:id="@+id/addFriTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fab_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/friTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Saturday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="SATURDAY"
                            android:letterSpacing=".2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" /><!-- Calendar Icon Button (NEW) -->
                        <ImageView
                            android:id="@+id/saturdayScheduleButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Set schedule"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            app:tint="#000000"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                        <ImageView
                            android:id="@+id/addSatTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fab_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/satTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Sunday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="SUNDAY"
                            android:letterSpacing=".2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000" /><!-- Calendar Icon Button (NEW) -->
                        <ImageView
                            android:id="@+id/sundayScheduleButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="Set schedule"
                            android:padding="4dp"
                            android:layout_marginEnd="4dp"
                            app:tint="#000000"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                        <ImageView
                            android:id="@+id/addSunTask"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_fab_add"
                            android:contentDescription="Add task"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sunTasksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Color Picker Panel (Place before keyboard toolbar) -->
    <RelativeLayout
        android:id="@+id/colorPickerPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/colorPickerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Background Color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/colorPickerTitle"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Default -->
            <View
                android:id="@+id/colorDefault"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#FAFAFA"
                android:clickable="true"
                android:focusable="true" />

            <!-- Red -->
            <View
                android:id="@+id/colorRed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#FFCDD2"
                android:clickable="true"
                android:focusable="true" />

            <!-- Pink -->
            <View
                android:id="@+id/colorPink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#F8BBD0"
                android:clickable="true"
                android:focusable="true" />

            <!-- Purple -->
            <View
                android:id="@+id/colorPurple"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#E1BEE7"
                android:clickable="true"
                android:focusable="true" />

            <!-- Blue -->
            <View
                android:id="@+id/colorBlue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#BBDEFB"
                android:clickable="true"
                android:focusable="true" />

            <!-- Cyan -->
            <View
                android:id="@+id/colorCyan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#B2EBF2"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/colorPickerTitle"
            android:layout_marginTop="56dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Green -->
            <View
                android:id="@+id/colorGreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#C8E6C9"
                android:clickable="true"
                android:focusable="true" />

            <!-- Yellow -->
            <View
                android:id="@+id/colorYellow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#FFF9C4"
                android:clickable="true"
                android:focusable="true" />

            <!-- Orange -->
            <View
                android:id="@+id/colorOrange"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#FFE0B2"
                android:clickable="true"
                android:focusable="true" />

            <!-- Brown -->
            <View
                android:id="@+id/colorBrown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#D7CCC8"
                android:clickable="true"
                android:focusable="true" />

            <!-- Grey -->
            <View
                android:id="@+id/colorGrey"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="@drawable/color_circle"
                android:backgroundTint="#CFD8DC"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </RelativeLayout>

    <!-- âœ… KEYBOARD TOOLBAR (Notion-style, attached to keyboard) -->
    <HorizontalScrollView
        android:id="@+id/keyboardToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#8daaa6"
        android:elevation="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            android:gravity="center_vertical">

            <!-- Headings & Fonts -->
            <ImageButton
                android:id="@+id/headingsandfont"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/headings_fonts"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Text Style"
                app:tint="#FFFFFFFF" />

            <!-- Theme -->
            <ImageButton
                android:id="@+id/addThemeOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_notes_feature_palette"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Theme"
                app:tint="#FFFFFFFF" />

            <!-- Subpage -->
            <ImageButton
                android:id="@+id/addSubpageOption"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_fab_notes"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Subpage"
                app:tint="#FFFFFFFF" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>