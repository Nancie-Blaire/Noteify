<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/noteLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".NoteActivity">

    <!-- Top Bar with Check Button -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="#FAFAFA"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_check"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Bookmarks Link -->
        <TextView
            android:id="@+id/bookmarksLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmarks"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Color Palette Button -->
        <ImageView
            android:id="@+id/colorPaletteBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_feature_palette"
            android:contentDescription="Change Color"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#757575" />

        <ImageView
            android:id="@+id/checkBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_check"
            android:contentDescription="Save"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#4CAF50" />

    </LinearLayout>

    <!-- Color Picker Panel (Initially Hidden) -->
    <HorizontalScrollView
        android:id="@+id/colorPickerPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="12dp"
        android:visibility="gone"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Default/White -->
            <View
                android:id="@+id/colorDefault"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#FAFAFA"
                android:tag="#FAFAFA" />

            <!-- Red -->
            <View
                android:id="@+id/colorRed"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#FFCDD2"
                android:tag="#FFCDD2" />

            <!-- Pink -->
            <View
                android:id="@+id/colorPink"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#F8BBD0"
                android:tag="#F8BBD0" />

            <!-- Purple -->
            <View
                android:id="@+id/colorPurple"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#E1BEE7"
                android:tag="#E1BEE7" />

            <!-- Blue -->
            <View
                android:id="@+id/colorBlue"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#BBDEFB"
                android:tag="#BBDEFB" />

            <!-- Cyan -->
            <View
                android:id="@+id/colorCyan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#B2EBF2"
                android:tag="#B2EBF2" />

            <!-- Green -->
            <View
                android:id="@+id/colorGreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#C8E6C9"
                android:tag="#C8E6C9" />

            <!-- Yellow -->
            <View
                android:id="@+id/colorYellow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#FFF9C4"
                android:tag="#FFF9C4" />

            <!-- Orange -->
            <View
                android:id="@+id/colorOrange"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#FFE0B2"
                android:tag="#FFE0B2" />

            <!-- Brown -->
            <View
                android:id="@+id/colorBrown"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#D7CCC8"
                android:tag="#D7CCC8" />

            <!-- Grey -->
            <View
                android:id="@+id/colorGrey"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="6dp"
                android:background="@drawable/themes_circle_bg"
                android:backgroundTint="#CFD8DC"
                android:tag="#CFD8DC" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="80dp">

            <!-- Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_fab_notes"
                android:contentDescription="Todo icon"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:tint="#000000" />

            <!-- Note Title -->
            <EditText
                android:id="@+id/noteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textCapSentences"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textColor="#000"
                android:layout_marginBottom="12dp" />

            <!-- Note Content -->
            <EditText
                android:id="@+id/noteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Start typing your note..."
                android:inputType="textMultiLine"
                android:minHeight="200dp"
                android:padding="8dp"
                android:textColor="#333"
                android:textSize="16sp"
                android:textIsSelectable="true" />

            <!-- Add Subpage Button -->
            <LinearLayout
                android:id="@+id/addSubpageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingVertical="16dp"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/addSubpageBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_fab_add"
                    android:padding="6dp"
                    android:background="@drawable/circle_bg"
                    android:contentDescription="Add Subpage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Subpage"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <!-- Subpages Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subpagesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>