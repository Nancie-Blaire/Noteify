<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp"
            android:paddingBottom="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Noteify Logo"
                android:src="@drawable/logo_noteify" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTEIFY"
                android:fontFamily="@font/inter_regular"
                android:letterSpacing=".3"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay organized. Stay on time."
                android:fontFamily="@font/inter_itallic"
                android:letterSpacing=".1"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="24dp" />

            <!-- Full Name Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/input_border_default">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_marginEnd="12dp"
                    app:tint="#757575" />

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Email Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/input_border_default">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_email"
                    android:layout_marginEnd="12dp"
                    app:tint="#757575" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email Address"
                    android:fontFamily="@font/inter_regular"
                    android:letterSpacing="0.1"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Password Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:focusable="true"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/input_border_default">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    android:layout_marginEnd="12dp"
                    app:tint="#757575" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_password_eye_off"
                    android:contentDescription="Toggle password visibility" />
            </LinearLayout>

            <!-- Confirm Password Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:focusable="true"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/input_border_default">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    android:layout_marginEnd="12dp"
                    app:tint="#757575" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/ivToggleConfirmPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_password_eye_off"
                    android:contentDescription="Toggle password visibility" />
            </LinearLayout>

            <!-- Email Verification Message (Hidden by Default) -->
            <TextView
                android:id="@+id/tvVerifyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✉️ Verification email sent!\n\nPlease check your inbox and click the verification link. This page will automatically proceed once verified."
                android:textColor="#00BFA5"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:background="@drawable/input_border_default" />

            <!-- Resend Verification Button (Hidden by Default) -->
            <Button
                android:id="@+id/btnResendVerification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resend Verification Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#00BFA5"
                android:fontFamily="@font/inter_regular"
                android:letterSpacing=".1"
                android:backgroundTint="#FFFFFF"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter_regular"
                android:letterSpacing=".1"
                android:backgroundTint="#00BFA5"
                android:paddingStart="64dp"
                android:paddingEnd="64dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="#757575"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />
            </LinearLayout>

            <!-- Google Sign-In -->
            <Button
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue with Google"
                android:textSize="16sp"
                android:textColor="#757575"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:drawableLeft="@drawable/ic_google"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navbar Section with log-in -->
    <RelativeLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/curved_navbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvLoginRedirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:text="@string/underlined_text_login"
                android:fontFamily="@font/inter_regular"
                android:letterSpacing=".2"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>