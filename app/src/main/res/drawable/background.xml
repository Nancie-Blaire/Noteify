<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_bgcolor"/>
        </shape>
    </item>

    <!-- Peach/Orange Circle (Left/Top) -->
    <item
        android:width="250dp"
        android:height="230dp"
        android:top="220dp"
        android:left="-50dp">
        <shape android:shape="oval">
            <stroke
                android:width="10dp"
                android:color="@color/small_circle"/>

        </shape>
    </item>

    <!-- Sage Green Circle (Right/Bottom) -->
    <item
        android:width="340dp"
        android:height="320dp"
        android:top="320dp"
        android:bottom="-80dp"
        android:left="100dp"
        android:right="-20dp">
        <shape android:shape="oval">
            <stroke
                android:width="10dp"
                android:color="@color/big_circle"/>

        </shape>
    </item>

</layer-list>