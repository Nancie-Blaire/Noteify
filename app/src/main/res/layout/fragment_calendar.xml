<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lightmode_bg">

    <!-- Header with Month/Year Dropdown -->
    <LinearLayout
        android:id="@+id/monthYearHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/monthYearText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="November â–¼"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"/>


    </LinearLayout>

    <!-- Custom Calendar Grid (We'll use RecyclerView for this) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendarGridRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/lightmode_bg"
        android:padding="8dp"/>

</LinearLayout>