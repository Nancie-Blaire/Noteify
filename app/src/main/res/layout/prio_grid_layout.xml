<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#f6d5b6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- âœ… NEW: Checkbox for multi-select (hidden by default, top-left) -->
        <CheckBox
            android:id="@+id/selectCheckBox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"/>

        <!-- Star Icon (Top Right) -->
        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:contentDescription="Star"
            android:focusable="true"
            android:src="@drawable/ic_star_outline" />

        <!-- Three Dots Menu (Below Star) -->
        <ImageView
            android:id="@+id/noteMenuButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/starIcon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:contentDescription="More options"
            android:focusable="true"
            android:padding="2dp"
            android:src="@drawable/three_dots" />

        <!-- Lock Icon (Below Three Dots) -->
        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="Locked"
            android:src="@drawable/ic_privacy_lock"
            android:visibility="gone" />


        <!-- Content Layout -->
        <LinearLayout
            android:id="@+id/noteLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/selectCheckBox"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Title"
                android:fontFamily="@font/syne"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/syne"
                android:text="Content"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>