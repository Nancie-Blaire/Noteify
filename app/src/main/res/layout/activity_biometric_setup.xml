<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/tvSetupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure Your Notes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set up security for locked notes"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="32dp"/>

        <!-- Fingerprint Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_lock_lock"
            app:tint="#FF9376"
            android:layout_marginBottom="24dp"/>

        <!-- Biometric Status -->
        <TextView
            android:id="@+id/tvBiometricStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checking fingerprint sensor..."
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <!-- Setup Fingerprint Button -->
        <Button
            android:id="@+id/btnSetupFingerprint"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Enable Fingerprint"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:backgroundTint="#26E9D8"
            android:layout_marginBottom="12dp"
            android:enabled="false"/>

        <!-- Skip Fingerprint Button -->
        <Button
            android:id="@+id/btnSkipFingerprint"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Skip (Use Password Only)"
            android:textSize="14sp"
            android:textColor="#757575"
            android:background="@drawable/button_secondary"
            android:backgroundTint="#E0E0E0"
            android:layout_marginBottom="32dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp"/>

        <!-- Master Password Section -->
        <EditText
            android:id="@+id/etMasterPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Create Master Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:background="@drawable/edittext_background"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:background="@drawable/edittext_background"
            android:visibility="gone"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSavePassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save and Continue"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:backgroundTint="#4CAF50"
            android:visibility="gone"/>

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ You can use fingerprint or master password to unlock your private notes"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="#FFF9C4"/>

        <!-- Skip Setup Button
        <Button
            android:id="@+id/btnSkipSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip for Now"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="16dp"/>
            -->

    </LinearLayout>
</ScrollView>