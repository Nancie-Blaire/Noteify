<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="50dp"
        android:paddingEnd="32dp"
        android:paddingBottom="20dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:contentDescription="Noteify Logo"
            android:src="@drawable/final_light" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/inter_regular"
            android:letterSpacing=".3"
            android:text="NOTEIFY"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/syne"
            android:letterSpacing="0.1"
            android:text="Stay organized. Stay on time."
            android:textColor="@color/stay_text"
            android:textSize="10sp" />

        <!-- Full Name Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_border_default"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="#757575" />

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_regular"
                android:hint="Full Name"
                android:textColorHint="@color/edit_input"
                android:textColor="#000000"
                android:inputType="textPersonName"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Email Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_border_default"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#757575" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_regular"
                android:hint="Email Address"
                android:textColorHint="@color/edit_input"
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                android:letterSpacing="0.1"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Password Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_border_default"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                app:tint="#757575" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_regular"
                android:hint="Password"
                android:textColorHint="@color/edit_input"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivTogglePassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Toggle password visibility"
                android:src="@drawable/ic_password_eye_off" />
        </LinearLayout>

        <!-- Confirm Password Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/input_border_default"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                app:tint="#757575" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_regular"
                android:hint="Confirm Password"
                android:textColorHint="@color/edit_input"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivToggleConfirmPassword"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Toggle password visibility"
                android:src="@drawable/ic_password_eye_off" />
        </LinearLayout>

        <!-- Email Verification Message (Hidden by Default) -->
        <TextView
            android:id="@+id/tvVerifyMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input_border_default"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="12dp"
            android:text="✉️ Verification email sent!\n\nPlease check your inbox and click the verification link. This page will automatically proceed once verified."
            android:textColor="#00BFA5"
            android:textSize="13sp"
            android:visibility="gone" />

        <!-- Resend Verification Button (Hidden by Default) -->
        <Button
            android:id="@+id/btnResendVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/inter_regular"
            android:letterSpacing=".1"
            android:paddingStart="32dp"
            android:paddingTop="10dp"
            android:paddingEnd="32dp"
            android:paddingBottom="10dp"
            android:text="Resend Verification Email"
            android:textColor="#00BFA5"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:backgroundTint="@color/btn_highlight"
            android:fontFamily="@font/inter_regular"
            android:letterSpacing=".05"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Divider -->
        <LinearLayout
            android:id="@+id/dividerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="OR"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E0E0E0" />
        </LinearLayout>

        <!-- Google Sign-In -->
        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_google"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Continue with Google"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Bottom Login Section -->
        <RelativeLayout
            android:id="@+id/bottomNavBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Already have an account? "
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvLoginRedirect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_regular"
                    android:letterSpacing=".2"
                    android:padding="4dp"
                    android:text="@string/underlined_text_login"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>