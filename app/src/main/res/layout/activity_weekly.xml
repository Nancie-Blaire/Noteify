<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:background="#8daaa6">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_revert_back_btn"
            android:contentDescription="Back"
            app:tint="#FFFFFF"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Title -->
        <TextView
            android:id="@+id/weeklyHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Planner"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@id/backButton"
            android:layout_alignTop="@id/backButton"
            android:layout_alignBottom="@id/backButton"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp" />

        <!-- Secondary Title (editable) -->
        <EditText
            android:id="@+id/weeklyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:hint="Title of Weekly Planner"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:text="Title of Weekly Planner"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:gravity="end"/>

        <!-- Action Buttons Container -->
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/backButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <!-- Due Date Calendar Button -->

            <!-- Save Button -->
            <ImageView
                android:id="@+id/scheduleButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Set Due Date"
                android:padding="8dp"
                app:tint="#FFFFFF"
                android:src="@drawable/ic_calendar" />

            <ImageView
                android:id="@+id/saveButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Save"
                android:padding="8dp"
                app:tint="#FFFFFF"
                android:scaleType="centerInside"
                android:src="@drawable/ic_check" />

        </RelativeLayout>

    </RelativeLayout>
    <!-- Due Date Display (shown when schedule is set) -->
    <LinearLayout
        android:id="@+id/dueDateDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_background"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendar"
            android:layout_marginEnd="8dp"
            app:tint="#2196F3" />

        <TextView
            android:id="@+id/dueDateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Due: Dec 08 - Dec 14, 5:17 PM"
            android:textSize="14sp"
            android:textColor="#2196F3" />

        <ImageView
            android:id="@+id/clearDateButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="2dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#808080" />

    </LinearLayout>

    <!-- NestedScrollView for Content (CHANGED FROM ScrollView) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- Days Container -->
        <LinearLayout
            android:id="@+id/daysContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Monday -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="MONDAY"
                        android:letterSpacing=".2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/addMonTask"
                        android:layout_width="32dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_fab_add"
                        android:contentDescription="Add task"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/monTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <!-- Tuesday -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="TUESDAY"
                        android:letterSpacing=".2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/addTuesTask"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_fab_add"
                        android:contentDescription="Add task"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tuesTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <!-- Wednesday -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="WEDNESDAY"
                        android:letterSpacing=".2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/addWedTask"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_fab_add"
                        android:contentDescription="Add task"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wedTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <!-- Thursday -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="THURSDAY"
                        android:letterSpacing=".2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/addThurTask"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_fab_add"
                        android:contentDescription="Add task"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/thurTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <!-- Friday -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="FRIDAY"
                        android:letterSpacing=".2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/addFriTask"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_fab_add"
                        android:contentDescription="Add task"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/friTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <!-- Saturday -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="SATURDAY"
                        android:letterSpacing=".2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/addSatTask"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_fab_add"
                        android:contentDescription="Add task"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/satTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <!-- Sunday -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="SUNDAY"
                        android:letterSpacing=".2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/addSunTask"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_fab_add"
                        android:contentDescription="Add task"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sunTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>