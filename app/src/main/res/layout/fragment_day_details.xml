<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back"
            app:tint="#000000"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Schedules"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/addScheduleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Add Schedule"
            app:tint="#2196F3"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete"
            app:tint="#F44336"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Date Header -->
    <TextView
        android:id="@+id/selectedDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="November 1"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <!-- Holiday Banner -->
    <LinearLayout
        android:id="@+id/holidayBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFEBEE"
        android:padding="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/holidayNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‰ All Saints' Day"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#C62828"/>
    </LinearLayout>

    <!-- Schedules List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/schedulesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:alpha="0.3"
            app:tint="#BDBDBD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No schedules for this day"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</LinearLayout>