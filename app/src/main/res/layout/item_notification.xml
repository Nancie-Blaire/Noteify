<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Category Indicator (Colored Bar) -->
        <View
            android:id="@+id/categoryIndicator"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#4CAF50"/>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Task 1"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Task Text -->
            <TextView
                android:id="@+id/notificationTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete the project proposal"
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <!-- Due Date -->
            <TextView
                android:id="@+id/notificationDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: Nov 5"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>